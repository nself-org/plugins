# =============================================================================
# ulink-preview Plugin - Environment Configuration
# =============================================================================
# URL metadata extraction with Open Graph, Twitter Cards, oEmbed support, custom previews, and caching
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Auto-provided by nself CLI
# -----------------------------------------------------------------------------

# PostgreSQL connection string (auto-provided by nself)
DATABASE_URL=postgresql://postgres:password@localhost:5432/nself_db

# -----------------------------------------------------------------------------
# REQUIRED - Security Configuration (auto-provided by nself)
# -----------------------------------------------------------------------------

# API key for inter-plugin authentication
LINK_PREVIEW_API_KEY=your-api-key-here

# Rate limiting (requests per window)
LINK_PREVIEW_RATE_LIMIT_MAX=100

# Rate limiting window (milliseconds)
LINK_PREVIEW_RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# OPTIONAL - Server Configuration
# -----------------------------------------------------------------------------

# Server port (default from plugin.json: 3718)
LINK_PREVIEW_PORT=3718

# Log level: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# OPTIONAL - Plugin-Specific Configuration
# -----------------------------------------------------------------------------

# LINK_PREVIEW_ENABLED
LINK_PREVIEW_ENABLED=value

# LINK_PREVIEW_CACHE_TTL_HOURS
LINK_PREVIEW_CACHE_TTL_HOURS=value

# LINK_PREVIEW_TIMEOUT_SECONDS
LINK_PREVIEW_TIMEOUT_SECONDS=value

# LINK_PREVIEW_USER_AGENT
LINK_PREVIEW_USER_AGENT=value

# LINK_PREVIEW_MAX_RESPONSE_SIZE_MB
LINK_PREVIEW_MAX_RESPONSE_SIZE_MB=value

# LINK_PREVIEW_FOLLOW_REDIRECTS
LINK_PREVIEW_FOLLOW_REDIRECTS=value

# LINK_PREVIEW_MAX_REDIRECTS
LINK_PREVIEW_MAX_REDIRECTS=value

# LINK_PREVIEW_RESPECT_ROBOTS_TXT
LINK_PREVIEW_RESPECT_ROBOTS_TXT=value

# OEMBED_ENABLED
OEMBED_ENABLED=value

# OEMBED_DISCOVERY
OEMBED_DISCOVERY=value

# OEMBED_MAX_WIDTH
OEMBED_MAX_WIDTH=value

# OEMBED_MAX_HEIGHT
OEMBED_MAX_HEIGHT=value

# LINK_PREVIEW_SAFETY_CHECK
LINK_PREVIEW_SAFETY_CHECK=value

# LINK_PREVIEW_PHISHING_DETECTION
LINK_PREVIEW_PHISHING_DETECTION=value



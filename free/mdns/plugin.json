{
  "name": "mdns",
  "version": "1.0.0",
  "description": "mDNS/Bonjour service discovery for zero-config LAN advertising",
  "author": "nself",
  "license": "MIT",
  "homepage": "https://github.com/nself-org/plugins/tree/main/plugins/mdns",
  "repository": "https://github.com/nself-org/plugins",
  "minNselfVersion": "0.4.8",
  "port": 3216,
  "category": "networking",
  "tags": [
    "mdns",
    "bonjour",
    "zeroconf",
    "lan",
    "service-discovery"
  ],
  "tables": [
    "np_mdns_services",
    "np_mdns_discovery_log"
  ],
  "webhooks": {},
  "actions": {
    "advertise": "Start advertising a service",
    "discover": "Discover services on the network",
    "services": "List advertised services",
    "stats": "Show mDNS statistics"
  },
  "envVars": {
    "required": [
      "DATABASE_URL"
    ],
    "optional": [
      "MDNS_PLUGIN_PORT",
      "MDNS_SERVICE_TYPE",
      "MDNS_INSTANCE_NAME",
      "MDNS_DOMAIN"
    ]
  },
  "config": {
    "defaultPort": 3216,
    "defaultServiceType": "_ntv._tcp",
    "defaultDomain": "local"
  },
  "hooks": {
    "postInstall": null,
    "preUninstall": null,
    "postSync": null
  },
  "multiApp": {
    "supported": true,
    "isolationColumn": "source_account_id",
    "pkStrategy": "uuid",
    "defaultValue": "primary"
  },
  "permissions": {
    "database": [
      "create",
      "read",
      "update",
      "delete"
    ],
    "network": [
      "*"
    ],
    "filesystem": [
      "logs",
      "cache",
      "temp"
    ]
  }
}
# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/nself

# Or individual database settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nself
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_SSL=false

# Server Configuration
PROGRESS_PLUGIN_PORT=3022
PROGRESS_PLUGIN_HOST=0.0.0.0

# Progress Settings
# Percentage threshold to mark content as completed (1-100)
PROGRESS_COMPLETE_THRESHOLD=95

# Minimum seconds between history event samples (to avoid spam)
PROGRESS_HISTORY_SAMPLE_SECONDS=30

# Days to retain history events (default: 365)
PROGRESS_HISTORY_RETENTION_DAYS=365

# Security (optional)
# API key for authentication
PROGRESS_API_KEY=

# Rate limiting
PROGRESS_RATE_LIMIT_MAX=500
PROGRESS_RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

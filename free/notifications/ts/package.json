{
  "name": "@nself/notifications-plugin",
  "version": "1.0.0",
  "description": "Multi-channel notification system for nself",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nself-notifications": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "worker": "tsx src/worker.ts",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "node --require tsx/cjs --test --test-force-exit tests/notifications.test.ts"
  },
  "keywords": [
    "nself",
    "notifications",
    "email",
    "push",
    "sms",
    "messaging"
  ],
  "author": "nself",
  "license": "Source-Available",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.709.0",
    "@aws-sdk/client-sns": "^3.709.0",
    "@nself/plugin-utils": "file:../../../shared",
    "@sendgrid/mail": "^8.1.4",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.4.2",
    "mailgun.js": "^10.2.3",
    "nodemailer": "^6.10.1",
    "pg": "^8.13.1",
    "resend": "^4.0.1",
    "twilio": "^5.12.1",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^6.4.22",
    "@types/pg": "^8.11.10",
    "@types/web-push": "^3.6.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}

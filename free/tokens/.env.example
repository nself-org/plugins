# =============================================================================
# utokens Plugin - Environment Configuration
# =============================================================================
# Secure content delivery tokens, HLS encryption key management, and entitlement checks
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Auto-provided by nself CLI
# -----------------------------------------------------------------------------

# PostgreSQL connection string (auto-provided by nself)
DATABASE_URL=postgresql://postgres:password@localhost:5432/nself_db

# -----------------------------------------------------------------------------
# REQUIRED - Security Configuration (auto-provided by nself)
# -----------------------------------------------------------------------------

# API key for inter-plugin authentication
TOKENS_API_KEY=your-api-key-here

# Rate limiting (requests per window)
TOKENS_RATE_LIMIT_MAX=100

# Rate limiting window (milliseconds)
TOKENS_RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# OPTIONAL - Server Configuration
# -----------------------------------------------------------------------------

# Server port (default from plugin.json: 3107)
TOKENS_PORT=3107

# Log level: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# OPTIONAL - Plugin-Specific Configuration
# -----------------------------------------------------------------------------

# TOKENS_APP_IDS
TOKENS_APP_IDS=value

# TOKENS_DEFAULT_TTL_SECONDS
TOKENS_DEFAULT_TTL_SECONDS=value

# TOKENS_HLS_ENCRYPTION_ENABLED
TOKENS_HLS_ENCRYPTION_ENABLED=value

# TOKENS_DEFAULT_ENTITLEMENT_CHECK
TOKENS_DEFAULT_ENTITLEMENT_CHECK=value

# TOKENS_ALLOW_ALL_IF_NO_ENTITLEMENTS
TOKENS_ALLOW_ALL_IF_NO_ENTITLEMENTS=value



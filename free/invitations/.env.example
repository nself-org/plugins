# =============================================================================
# uinvitations Plugin - Environment Configuration
# =============================================================================
# Invitation management system with email/SMS delivery and tracking
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Auto-provided by nself CLI
# -----------------------------------------------------------------------------

# PostgreSQL connection string (auto-provided by nself)
DATABASE_URL=postgresql://postgres:password@localhost:5432/nself_db

# -----------------------------------------------------------------------------
# REQUIRED - Security Configuration (auto-provided by nself)
# -----------------------------------------------------------------------------

# API key for inter-plugin authentication
INVITATIONS_API_KEY=your-api-key-here

# Rate limiting (requests per window)
INVITATIONS_RATE_LIMIT_MAX=100

# Rate limiting window (milliseconds)
INVITATIONS_RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# OPTIONAL - Server Configuration
# -----------------------------------------------------------------------------

# Server port (default from plugin.json: 3402)
INVITATIONS_PORT=3402

# Log level: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# OPTIONAL - Plugin-Specific Configuration
# -----------------------------------------------------------------------------

# INVITATIONS_DEFAULT_EXPIRY_HOURS
INVITATIONS_DEFAULT_EXPIRY_HOURS=value

# INVITATIONS_CODE_LENGTH
INVITATIONS_CODE_LENGTH=value

# INVITATIONS_MAX_BULK_SIZE
INVITATIONS_MAX_BULK_SIZE=value

# INVITATIONS_ACCEPT_URL_TEMPLATE
INVITATIONS_ACCEPT_URL_TEMPLATE=value



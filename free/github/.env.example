# =============================================================================
# ugithub Plugin - Environment Configuration
# =============================================================================
# GitHub repository, issue, and workflow integration
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Auto-provided by nself CLI
# -----------------------------------------------------------------------------

# PostgreSQL connection string (auto-provided by nself)
DATABASE_URL=postgresql://postgres:password@localhost:5432/nself_db

# -----------------------------------------------------------------------------
# REQUIRED - Security Configuration (auto-provided by nself)
# -----------------------------------------------------------------------------

# API key for inter-plugin authentication
GITHUB_API_KEY=your-api-key-here

# Rate limiting (requests per window)
GITHUB_RATE_LIMIT_MAX=100

# Rate limiting window (milliseconds)
GITHUB_RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# OPTIONAL - Server Configuration
# -----------------------------------------------------------------------------

# Server port (default from plugin.json: 3002)
GITHUB_PORT=3002

# Log level: debug, info, warn, error
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# OPTIONAL - Plugin-Specific Configuration
# -----------------------------------------------------------------------------

# GITHUB_WEBHOOK_SECRET
GITHUB_WEBHOOK_SECRET=value

# GITHUB_ORG
GITHUB_ORG=value

# GITHUB_REPOS
GITHUB_REPOS=value

# GITHUB_API_KEYS
GITHUB_API_KEYS=value

# GITHUB_ACCOUNT_LABELS
GITHUB_ACCOUNT_LABELS=value


